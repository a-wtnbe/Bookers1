<h1>Books</h1>
  <table>
   <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
     <!--空白↓-->
     <th colspan="3"></th>
    </tr>
   </thead>

   <tbody>
    <% @book.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td>
      <%= link_to "Show", book_path(book) %>
     </td>
     <td>
      <%= link_to "Edit", edit_book_path(book) %>
     </td>
     <td>
      <%= link_to "Destroy", book_path(book.id), method: :delete %>
     </td>
    </tr>
    <% end %>
   </tbody>
  </table>

 <h1>new book</h1>
 <!-- form_with部分 -->
 <%= form_with model: @book, url:'/books', local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit "create Book" %>
 <% end %>
