<h1>Books</h1>
  <table>
   <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
     <!--空白↓-->
     <th colspan="3"></th>
    </tr>
   </thead>

   <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td>
      <%= link_to "Show", book_path(book) %>
     </td>
     <td>
      <%= link_to "Edit", edit_book_path(book) %>
     </td>
     <td>
      <%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm:  'Do you want to delete it?' }%>
     </td>
    </tr>
    <% end %>
   </tbody>
  </table>

 <h1>new book</h1>
 <!-- form_with部分 -->
 <%= form_with model:@book, url:'/books', local:true do |f| %>
 <% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
 error
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
 <% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit "create Book" %>
 <% end %>
